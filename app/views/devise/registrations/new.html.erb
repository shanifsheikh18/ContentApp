<h2 class="text-center my-4">Sign up</h2>
<div class="container">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="row mb-3">
      <%= f.label :username, class: "col-sm-2 col-form-label text-dark fw-bold " %>
      <div class="col-sm-10">
        <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <%= f.label :email, class: "col-sm-2 col-form-label text-dark fw-bold " %>
      <div class="col-sm-10">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <%= f.label :password, class: "col-sm-2 col-form-label text-dark fw-bold " %>
      <div class="col-sm-10">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <%= f.label :password_confirmation, class: "col-sm-2 col-form-label text-dark fw-bold " %>
      <div class="col-sm-10">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
    </div>


    <div class="text-center">
      <%= f.submit "Sign up", class: "btn btn-primary py-2 px-4" %>
    </div>
    
  <% end %>


<%= render "devise/shared/links" %>

</div>
